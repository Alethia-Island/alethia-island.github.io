@page "/sandbox/rules"

<Title Value="Alethia Island - Sandbox Rules"></Title>

@md

@code {
    [Inject]
    HttpClient Http { get; set; }

    MarkupString md = new();

    protected override async Task OnInitializedAsync()
    {
        md = new(await Http.GetMarkdownAsHtml($"{AppConfig.LinksRepo}/sandbox_rules.md"));
        await base.OnInitializedAsync();
    }
}