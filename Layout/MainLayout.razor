@inherits LayoutComponentBase

<div class="page-background" />

<div class="page">
    <header>
        <div class="row fs-5">
            <div class="col-1" style="width: 60px;">
                <img class="rounded-circle shadow" src="https://raw.githubusercontent.com/Alethia-Island/assets/master/images/sandbox/icons/icon-512.png" style="height: 48px; width: 48px;">
            </div>
            <div class="col-1" style="width: 45px;">
                <h1 class="link shadow" @onclick="@(() => GoBack())" title="Go back to the previous page."><i class="fa-solid fa-arrow-left"></i></h1>
            </div>
            <div class="col">
                <h1 class="ms-2 shadow">
                    @if (string.IsNullOrWhiteSpace(PageIcon) is false)
                    {
                        <i class="@PageIcon me-2" style="z-index: 1001;"></i>
                    }
                    @if (string.IsNullOrWhiteSpace(PageTitle) is false)
                    {
                        <span> @PageTitle</span>
                    }
                </h1>
            </div>
        </div>
    </header>
    <main class="">
        <article class="container shadow-lg p-4 mt-4 mb-4">
            @Body
        </article>
    </main>
    <footer class="text-center">
        <ul class="w-100 menu d-block text-center mb-2 fs-4">
            <li class="text-center">
                <NavLink href="" Match="NavLinkMatch.All" title="Home.">
                    <i class="fa-solid fa-house"></i>
                </NavLink>
            </li>
            <li class="text-center">
                <NavLink href="general" title="General Information.">
                    <i class="fa-solid fa-info-circle"></i>
                </NavLink>
            </li>
            <li class="text-center">
                <NavLink href="sandbox/rules" title="Sandbox Rules.">
                    <i class="fa-solid fa-scroll"></i>
                </NavLink>
            </li>
            <li class="text-center">
                <NavLink href="links" title="Links.">
                    <i class="fa-solid fa-link"></i>
                </NavLink>
@*                 <div class="small fs-6">Links</div> *@
            </li>
            <li class="text-center">
                <NavLink href="contact" title="Contact Us.">
                    <i class="fa-solid fa-address-card"></i>
                </NavLink>
            </li>
        </ul>
    </footer>
</div>

@* <div class="bg-img" />

<div class="navbar ps-2 pe-2 w-100">
    <div class="hdr-l hdr-f">
        <span><img class="rounded-circle shadow" src="https://raw.githubusercontent.com/Alethia-Island/assets/master/images/sandbox/icons/icon-512.png" style="height: 24px; width: 24px;"> Alethia Island</span>
    </div>
    <div class="hdr-r hdr-f">
        <div class="float-end pe-2">
            <NavLink href="" Match="NavLinkMatch.All">Home</NavLink>
            <NavLink href="general">General</NavLink>
            <NavLink href="sandbox/rules" Match="NavLinkMatch.Prefix">Rules</NavLink>
            <NavLink href="links">Links</NavLink>
            <NavLink href="contact">Contact Us</NavLink>
        </div>
    </div>
</div>
<p class="container p-4 mt-5 shadow">
    @Body
</p> *@